# BSG Helpdesk - WSL Windows Environment Configuration
# Copy this file to .env and configure with your settings

# Application
APP_NAME="BSG Helpdesk"
APP_VERSION="1.0.0"
NODE_ENV="production"

# Database Configuration
POSTGRES_DB=ticketing_system_db
POSTGRES_USER=helpdesk_user
POSTGRES_PASSWORD=ChangeThisSecurePassword123!
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}"

# Backend Configuration
BACKEND_PORT=3001
JWT_SECRET="ChangeThisToAVerySecureJWTSecretForProduction"
JWT_EXPIRES_IN="1h"

# Frontend Configuration
FRONTEND_PORT=3000
REACT_APP_API_URL="http://localhost:3001/api"
REACT_APP_APP_NAME="BSG Helpdesk"
REACT_APP_COMPANY_NAME="BSG Banking"

# Redis Configuration
REDIS_PORT=6379
REDIS_URL="redis://redis:6379"

# Email Configuration (SMTP)
# Configure these for email notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@company.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="BSG Helpdesk <noreply@company.com>"

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH="uploads/"

# Application URLs
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"

# Security Configuration
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# WSL-Specific Configuration
WSL_HOST_IP="localhost"

# Feature Flags
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="combined"