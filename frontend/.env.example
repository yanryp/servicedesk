# BSG Helpdesk Frontend Environment Configuration

# API Configuration
# Backend API base URL - change for production deployment
REACT_APP_API_URL="http://localhost:3001/api"

# Application Branding
REACT_APP_APP_NAME="BSG Helpdesk"
REACT_APP_COMPANY_NAME="BSG Company"
REACT_APP_SUPPORT_EMAIL="support@company.com"
REACT_APP_VERSION="1.0.0"

# UI Configuration
REACT_APP_THEME="light"  # light, dark, auto
REACT_APP_PRIMARY_COLOR="#3B82F6"  # Blue
REACT_APP_SECONDARY_COLOR="#6366F1"  # Indigo

# Feature Flags
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_FILE_UPLOADS=true
REACT_APP_ENABLE_REAL_TIME_UPDATES=true
REACT_APP_ENABLE_DEPARTMENT_FILTERING=true

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760  # 10MB in bytes
REACT_APP_ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx,txt,csv,xlsx"
REACT_APP_MAX_FILES_PER_TICKET=5

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=100

# Session Configuration
REACT_APP_SESSION_TIMEOUT=3600000  # 1 hour in milliseconds
REACT_APP_IDLE_WARNING_TIME=300000  # 5 minutes before timeout

# Debugging (Development Only)
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL="error"  # error, warn, info, debug

# Analytics (Optional)
REACT_APP_ANALYTICS_ID=""
REACT_APP_ENABLE_ANALYTICS=false

# External Links
REACT_APP_DOCUMENTATION_URL="https://docs.company.com/helpdesk"
REACT_APP_COMPANY_WEBSITE="https://company.com"

# Date/Time Format
REACT_APP_DATE_FORMAT="MM/DD/YYYY"
REACT_APP_TIME_FORMAT="12"  # 12 or 24 hour format
REACT_APP_TIMEZONE="America/New_York"

# Language/Localization
REACT_APP_DEFAULT_LANGUAGE="en"
REACT_APP_AVAILABLE_LANGUAGES="en,es,fr"

# Performance
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_TIMEOUT=300000  # 5 minutes

# Development
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=false